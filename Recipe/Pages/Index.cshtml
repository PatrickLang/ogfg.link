@page
@model ogfg.recipeapp.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].LongUrl)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongUrl)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                <a asp-page="./Label" asp-route-shortUrl="@item.ShortUrl">Label</a>
            </td>
        </tr>
}
    </tbody>
</table>
